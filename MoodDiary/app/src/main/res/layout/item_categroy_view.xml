<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/x10"
    android:layout_margin="@dimen/x10"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/x10"
        android:layout_margin="@dimen/x2"
        android:background="@drawable/rounded">

        <TextView
            android:id="@+id/id_category_text_view"
            android:tag="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="Category"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/id_category_text_view_count"
            android:tag="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="(0)"
            android:textColor="@android:color/white"
            android:layout_alignBaseline="@+id/id_category_text_view"
            android:layout_alignBottom="@+id/id_category_text_view"
            android:layout_toEndOf="@+id/id_category_text_view" />

    </RelativeLayout>

</RelativeLayout>