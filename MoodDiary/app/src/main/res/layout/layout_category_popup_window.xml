<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:alpha="0.95">


    <com.app.feja.mooddiary.widget.CategoryView
        android:id="@+id/id_popup_all_category_view"
        android:layout_marginBottom="@dimen/x1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_popup_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:alpha="0.95"
        android:scrollbarSize="@dimen/x5"
        android:scrollbarThumbVertical="@color/whiteSmoke"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <com.app.feja.mooddiary.widget.CategoryView
        android:id="@+id/id_popup_edit_category_view"
        android:layout_marginTop="@dimen/x1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"/>

</LinearLayout>